<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    tools:context="com.promptnow.qrpayment.merchant.Fragment.PersonFragment">


    <TextView
        android:id="@+id/tv_label_tranID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:text="Transaction ID" />

    <TextView
        android:id="@+id/tv_tranID"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="20dp"
        android:text="1546"/>

    <TextView
        android:id="@+id/tv_label_tranType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_label_tranID"
        android:text="Transaction Type" />

    <TextView
        android:id="@+id/tv_label_Cardtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_label_name"
        android:text="Card Type" />

    <TextView
        android:id="@+id/tv_tranType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_alignEnd="@+id/tv_tranID"
        android:layout_below="@+id/tv_tranID"
        android:text="Payment" />
    <TextView
        android:id="@+id/tv_label_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:text="Total amount"
        android:layout_below="@+id/tv_tranType"
        />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_alignEnd="@+id/tv_tranStatus"
        android:layout_below="@+id/tv_tranType"
        android:text="500" />

    <TextView
        android:id="@+id/tv_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_below="@+id/tv_label_amount"
        android:text="Merchant name"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_label_name"
        android:layout_alignBottom="@+id/tv_label_name"
        android:layout_alignEnd="@+id/tv_Cardtype"
        android:text="wat"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_label_status"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_label_time"
        android:layout_marginTop="59dp"
        android:text="Trasaction Status" />

    <TextView
        android:id="@+id/tv_Cardtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_alignEnd="@+id/tv_tranStatus"
        android:layout_below="@+id/tv_name"
        android:text="gg" />

    <TextView
        android:id="@+id/tv_tranStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignStart="@+id/tv_tranType"
        android:layout_alignTop="@+id/tv_label_status"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_label_Cardnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_Cardtype"
        android:text="Card number" />

    <TextView
        android:id="@+id/tv_Cardnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/tv_label_date"
        android:layout_alignEnd="@+id/tv_Cardtype"
        android:text="1234" />

    <TextView
        android:id="@+id/tv_label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_label_Cardnumber"
        android:text="Date" />

    <TextView
        android:id="@+id/tv_trandate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_label_time"
        android:layout_alignEnd="@+id/tv_Cardnumber"
        android:text="12 Nov 2016"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />




    <TextView
        android:id="@+id/tv_label_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_label_date"
        android:text="Time" />

    <View
        android:id="@+id/lindUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_label_time"
        android:layout_marginTop="20dp"
        android:background="@color/black" />


    <TextView
        android:id="@+id/tv_trantime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_label_time"
        android:layout_alignStart="@+id/tv_tranID"
        android:text="12.00"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/shap_round_rect_button"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

